{
    // Look
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "file-icons",
    "php.validate.run": "onType",
    "powermode.enabled": false,
    "powermode.presets": "fireworks",
    "editor.formatOnPaste": true,
    "workbench.list.automaticKeyboardNavigation": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/home/jerome/tools/Other/miniconda3/envs/mbc_dev/bin/flake8",
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.formatting.provider": "none",
    "files.insertFinalNewline": true,
    "atomKeymap.promptV3Features": true,
    "breadcrumbs.enabled": true, // navigation bar for the current file on top https://code.visualstudio.com/docs/editor/editingevolved
    "workbench.statusBar.feedback.visible": false,

    "extensions.ignoreRecommendations": true,
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "files.associations": {
        "*.Snakefile": "python",
        "*.snakefile": "python",
        "*.smk": "python",
    },
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.startupEditor": "welcomePage",
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    // "python.defaultInterpreterPath": "/home/jerome/.pyenv/versions/foutoir/bin/python",
    "security.workspace.trust.emptyWindow": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.enabled": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "code-runner.enableAppInsights": false,
    "terminal.integrated.inheritEnv": false,
}
